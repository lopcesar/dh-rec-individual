<!DOCTYPE html>
<html lang="en">
<head>
 <%- include("../partials/head.ejs", {title}) %> 
</head>

<% 
    let data;
    if (typeof serie != "undefined") {
        data = serie;
        data.url = `/series/${serie.id}?method=PATCH`

    }else{
        data = {
            title: "",
            cover_art: "",
        }
    }
%> 
<body>
    <% 
        const breadcrumbs = [
            {name:"Home",url:"/"},
            {name:"Actors",url:"/actors"}
        ]
        if (data.id){
            breadcrumbs.push({name: (data.title), url:`/series/${data.id}`})
        }
        %>
    <%- include("../components/page-breadcrumb",{breadcrumbs}) %>

        <div class="container mt-5">

        <%- include("../components/page-title", {title: data.title || title }) %>

        <form action="<%= data.url %>" method="POST">
            <%- include("../components/form-input", { data:{label: "Title", name:"title", type:"text", value:data.title} }) %>
            <%- include("../components/form-imageLink", {data:{label: "Cover Art", name:"cover_art", value:data.cover_art }}) %>

            <%- include("../components/form-button", {data: {label: "Submit", type: "submit"}}) %>
        </form>
        
    </div>
</body>
</html>